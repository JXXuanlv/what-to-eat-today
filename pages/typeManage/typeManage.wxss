.container {
  padding: 20rpx;
}

.add-type {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.type-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.add-button {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0;
  background: #576b95;
}

.type-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.type-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.type-item:last-child {
  border-bottom: none;
}

.type-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.type-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.type-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.type-name {
  font-size: 28rpx;
  color: #333;
}

.type-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.actions {
  display: flex;
  align-items: center;
}

.actions text {
  font-size: 28rpx;
  padding: 0 20rpx;
}

.edit {
  color: #576b95;
}

.delete {
  color: #e64340;
}

.save {
  color: #07c160;
}

.cancel {
  color: #999;
}

.edit-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.image-upload {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.upload-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border: none;
}

.delete-image {
  font-size: 24rpx;
  color: #e64340;
}